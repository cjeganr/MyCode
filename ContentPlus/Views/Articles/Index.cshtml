@model IEnumerable<ContentPlus.Models.Article>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
            <!-- Content Header (Page header) -->
                            <section class="content-header">
                                <h1>
                                    Articles
                                    <small>Article List</small>
                                </h1>
                                <ol class="breadcrumb">
                                    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                                    <li><a href="#">Articles</a></li>
                                    <li class="active">Article List</li>
                                </ol>
                            </section>
            <!-- Main content -->
    <section class="content">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="box">
                            <div class="box-header">
                                <h3 class="box-title">Articles List</h3>
                            </div><!-- /.box-header -->
                            <div class="box-body">
                                <table id="example2" class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>Article ID</th>
                                            <th>Title</th>
                                            <th>Category</th>
                                            <th>Is Active</th>
                                            <th>Author</th>
                                            <th>Updated date</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                      @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.ID)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Category1)</td>
                                            <td>@Html.DisplayFor(modelItem => item.IsActive)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Author)</td>
                                            <td>@Html.DisplayFor(modelItem => item.UpdatedDate)</td>
                                            <td>
                                                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                                                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                                            </td>
                                        </tr>
                                      }
                                    </tbody>
                                   
                                </table>
                            </div><!-- /.box-body -->
                        </div><!-- /.box -->
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </section><!-- /.content -->
        
    <!-- jQuery 2.1.3 -->
    <script src="../styles/plugins/jQuery/jQuery-2.1.3.min.js"></script>
    <!-- DATA TABES SCRIPT -->
    <script src="../styles/plugins/datatables/jquery.dataTables.js" type="text/javascript"></script>
    <script src="../styles/plugins/datatables/dataTables.bootstrap.js" type="text/javascript"></script>
     

    <!-- page script -->
    <script type="text/javascript">
        $(function () {
            $("#example1").dataTable();
            $('#example2').dataTable({
                "bPaginate": true,
                "bLengthChange": false,
                "bFilter": false,
                "bSort": true,
                "bInfo": true,
                "bAutoWidth": false
            });
        });
    </script>

