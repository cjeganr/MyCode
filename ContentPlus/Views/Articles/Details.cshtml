@model ContentPlus.Models.Article

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Articles
        <small>New Article</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Articles</a></li>
        <li class="active">Article Details</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Article Details</h3>
                </div><!-- /.box-header -->
                <!-- form start -->
                <!--<form role="form">-->
                <div class="box-body">
                    <div class="form-group">
                        <label>Title</label>
                        @Html.DisplayFor(model => model.Title)
                    </div>
                    <div class="form-group">
                        <label>Content</label>
                        @Html.Raw(HttpUtility.HtmlDecode(Model.Content));
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="box box-solid">
                                <div class="box-header with-border">
                                    <i class="fa fa-file-image-o"></i>
                                    <h3 class="box-title">Images</h3>
                                </div><!-- /.box-header -->
                                <div class="box-body">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-4">
                                                <b>Image1&nbsp; :</b>
                                            </div>
                                            <div class="col-md-4">
                                                @Html.DisplayFor(model => model.Photo1)
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <b>Image2&nbsp; :</b>
                                            </div>
                                            <div class="col-md-4">
                                                @Html.DisplayFor(model => model.Photo2)
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <b>Image3&nbsp; :</b>
                                            </div>
                                            <div class="col-md-4">
                                                @Html.DisplayFor(model => model.Photo3)
                                            </div>
                                        </div>
                                    </div>
                                </div><!-- /.box-body -->
                            </div><!-- /.box -->
                        </div><!-- ./col -->
                        <div class="col-md-6">
                            <div class="box box-solid">
                                <div class="box-header with-border">
                                    <i class="fa fa-file-pdf-o"></i>
                                    <h3 class="box-title">PDF's</h3>
                                </div><!-- /.box-header -->
                                <div class="box-body">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-4">
                                                <b>PDF1&nbsp; :</b>
                                            </div>
                                            <div class="col-md-4">
                                                @Html.DisplayFor(model => model.PDF1)
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <b>PDF2&nbsp; :</b>
                                            </div>
                                            <div class="col-md-4">
                                                @Html.DisplayFor(model => model.PDF2)
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <b>PDF3&nbsp; :</b>
                                            </div>
                                            <div class="col-md-4">
                                                @Html.DisplayFor(model => model.PDF3)
                                            </div>
                                        </div>
                                    </div>
                                </div><!-- /.box-body -->
                            </div><!-- /.box -->
                        </div><!-- ./col -->
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="box box-solid">
                                <div class="box-header with-border">
                                    <i class="fa fa-list-alt"></i>
                                    <h3 class="box-title">Categories</h3>
                                </div><!-- /.box-header -->
                                <div class="box-body">
                                    <div class="form-group">
                                        <label>Category</label>
                                        @Html.DisplayFor(model => model.Category1)
                                    </div>
                                    <div class="form-group">
                                        <label>Sub Category</label>
                                        @Html.DisplayFor(model => model.Category2)
                                    </div>
                                    <div class="form-group">
                                        <label>Section</label>
                                        @Html.DisplayFor(model => model.Section)
                                    </div>
                                </div><!-- /.box-body -->
                            </div><!-- /.box -->
                        </div><!-- ./col -->
                        <div class="col-md-6">
                            <div class="box box-solid">
                                <div class="box-header with-border">
                                    <i class="fa fa-check-square-o"></i>
                                    <h3 class="box-title">Article Status</h3>
                                </div><!-- /.box-header -->
                                <div class="box-body">
                                    <div class="form-group">
                                        <label>Is Active</label>
                                        @Html.DisplayFor(model => model.IsActive)
                                    </div>
                                    <div class="form-group">
                                        <label>Is Special</label>
                                        @Html.DisplayFor(model => model.IsSpecial)
                                    </div>
                                    <div class="form-group">
                                        <label>Author</label>
                                        @Html.DisplayFor(model => model.Author)
                                    </div>
                                </div><!-- /.box-body -->
                            </div><!-- /.box -->
                        </div><!-- ./col -->
                    </div>


                    <div class="row">
                        <div class="col-md-6">
                            <div class="box box-solid">
                                <div class="box-header with-border">
                                    <i class="fa fa-th-large"></i>
                                    <h3 class="box-title">Additional Details</h3>
                                </div><!-- /.box-header -->
                                <div class="box-body">
                                    <div class="form-group">
                                        <label>Detail_A</label>
                                        @Html.DisplayFor(model => model.Custom1)
                                    </div>
                                    <div class="form-group">
                                        <label>Detail_B</label>
                                        @Html.DisplayFor(model => model.Custom2)
                                    </div>
                                    <div class="form-group">
                                        <label>Detail_C</label>
                                        @Html.DisplayFor(model => model.Custom3)
                                    </div>
                                </div><!-- /.box-body -->
                            </div><!-- /.box -->
                        </div><!-- ./col -->
                        <div class="col-md-6">
                            <div class="box box-solid">
                                <div class="box-header with-border">
                                    <i class="fa fa-th-large"></i>
                                    <h3 class="box-title">Additional Details</h3>
                                </div><!-- /.box-header -->
                                <div class="box-body">
                                    <div class="form-group">
                                        <label>Detail_D</label>
                                        @Html.DisplayFor(model => model.Custom4)
                                    </div>
                                    <div class="form-group">
                                        <label>Detail_E</label>
                                        @Html.DisplayFor(model => model.Custom5)
                                    </div>
                                    <div class="form-group">
                                        <label>Detail_F</label>
                                        @Html.DisplayFor(model => model.Custom6)
                                    </div>
                                </div><!-- /.box-body -->
                            </div><!-- /.box -->
                        </div><!-- ./col -->
                    </div>
                    <p>
                        @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, new { @class = "btn btn-primary" }) 
                        @Html.ActionLink("Back to List", "Show", null, new { @class = "btn btn-primary" })
                    </p>
                </div>
            </div>
        </div>
    </div>
</section><!-- /.content -->

<!-- jQuery 2.1.3 -->
<script src="~/styles/plugins/jQuery/jQuery-2.1.3.min.js"></script>
