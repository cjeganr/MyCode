@model ContentPlus.Models.Church

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <section class="content-header">
        <h1>
            Church
            <small>Church</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Church</a></li>
            <li class="active">Church Details</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Church Details</h3>
                    </div><!-- /.box-header -->
                    <!-- form start -->
                    <!--<form role="form">-->
                    <div class="box-body">
                        <div class="form-group">
                            <label>Name</label>
                            @Html.DisplayFor(model => model.Name)
                        </div>
                        <div class="form-group">
                            <label>Description</label>
                            @Html.Raw(HttpUtility.HtmlDecode(Model.Description));
                        </div>
                        
                        <div class="box-header">
                            <h3 class="box-title">Are you sure you want to delete this?</h3>
                        </div><!-- /.box-header -->
                        <p>
                            <input type="submit" value="Delete" class="btn btn-primary" />
                            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
                        </p>

                    </div>
                </div>
            </div>
        </div>
    </section><!-- /.content -->
}
<!-- jQuery 2.1.3 -->
<script src="~/styles/plugins/jQuery/jQuery-2.1.3.min.js"></script>

