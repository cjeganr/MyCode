                singleItem: true,
                autoHeight: true,
                afterInit: function (elem) {
                    var that = this
                    that.owlControls.prependTo(elem)
                }
            });
            $(".sliderssrnav").owlCarousel({
                pagination: false,
                autoPlay: 3000,
                stopOnHover: true,
