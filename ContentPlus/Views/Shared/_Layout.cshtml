                    var that = this
                    that.owlControls.prependTo(elem)
                }
            });

            $("#clientslist").owlCarousel({
                items: 6,
                autoHeight: true,
                navigation: true,
                pagination: false,
                autoPlay: true,
                afterInit: function (elem) {
