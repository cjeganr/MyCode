    <div class="maincontents">
        <div class="container">
       
            <div class="row">
                <a href="#"><img src="~/Images/Ad/DoctorMeet.jpg" /></a>
             </div>
         
                <div class="row">
                    <div class="col-md-4 col-xs-12 col-xxs">
                        <h2 class="h4">Welcome to Catholicate</h2>
                        <p>@Html.Partial("_WelcomePartial")</p><br />
                        <a href="@Url.Action("Index", "Publisher")">[Read More] </a>
                    </div>

                    <div class="col-md-4 col-xs-6 col-xxs">
                        <h2 class="h4">News &amp; Events </h2>
                        <div class="sliderssrnav">
                            @Html.Partial("_NewsPartial")
                        </div>
                    </div>

                    <div class="col-md-4 col-xs-6 col-xxs testimonial">
                        <div class="s_cont">
                            @using (Html.BeginForm("Index", "PriestSearch", FormMethod.Get))
                        {
                        <div class="searchbar clearfix">
                            <div class="input-group">
                                <input type="text" name="name" placeholder="Search for..." class="form-control" required>
                                <span class="input-group-btn">
                                    <input type="submit" name="submit" value="Go!" class="btn btn-primary">
                                </span>
                            </div>
                        </div>
                        }
                        </div>

                        <a href="#"><img src="~/Content/Website/images/ad.jpg" width="380" height="270" class="img-responsive"></a>
                    </div>
                </div>
            </div>
        @RenderBody()
    </div>
