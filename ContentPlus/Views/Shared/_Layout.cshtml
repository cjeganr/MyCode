            <img src="~/Content/Website/images/mobile.png" width="700" height="600" class="mobile_image">

            <div class="logo"><a href="/"><img src="~/Content/Website/images/logo.png" width="300" height="135" alt="Logo"></a></div>
            <div class="menu">
                <div class="menu_container">
                    <a class="m_item m_item_1" href="@Url.Action("Index", "Publisher")">&nbsp;</a>
