@model ContentPlus.Models.Priest

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@{
    List<SelectListItem> PriestTypeList = new List<SelectListItem>();
    PriestTypeList.Add(new SelectListItem
    {
        Text = "None",
        Value = "None",
        Selected = true
    });
    PriestTypeList.Add(new SelectListItem
    {
        Text = "LateHeads",
        Value = "LateHeads"

    });
    PriestTypeList.Add(new SelectListItem
    {
        Text = "LateBishops",
        Value = "LateBishops"
    });
    PriestTypeList.Add(new SelectListItem
    {
        Text = "LatePrelates",
        Value = "LatePrelates"
    });
    PriestTypeList.Add(new SelectListItem
    {
        Text = "Pope",
        Value = "Pope"
    });
    PriestTypeList.Add(new SelectListItem
    {
        Text = "MajorArchBishop",
        Value = "MajorArchBishop"
    });
    PriestTypeList.Add(new SelectListItem
    {
        Text = "SynodFathers",
        Value = "SynodFathers"
    });
}

@using (Html.BeginForm("Edit", "Priest", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)


    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Priests
            <small>Edit Priest</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Priests</a></li>
            <li class="active">Edit Priest</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Edit Priest</h3>
                    </div><!-- /.box-header -->
                    <!-- form start -->
                    <!--<form role="form">-->
                    <div class="box-body">

                        @Html.HiddenFor(model => model.ID)
                        <div class="form-group">
                            <label>Name</label>
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                        <div class="form-group">
                            <label>Photo</label>
                            <img src="@Url.Content(Model.Photo)" alt="" height="62" width="62" style="border: 1px solid #337ab7; padding: 5px 5px 5px 5px" />
                            @Html.TextBoxFor(model => model.Photo, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Photo)
                            <input type="file" name="files[0]" id="Photo1" />
                        </div>
                        <div class="form-group">
                            <label>Description</label>
                            @Html.TextAreaFor(model => model.LongDesc, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.LongDesc)
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="box box-solid">
                                    <div class="box-header with-border">
                                        <i class="fa fa-th-large"></i>
                                        <h3 class="box-title">Additional Details</h3>
                                    </div><!-- /.box-header -->
                                    <div class="box-body">
                                        <div class="form-group">
                                            <label>Diocese</label>
                                            @Html.TextBoxFor(model => model.Diocese, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Diocese)
                                        </div>
                                        <div class="form-group">
                                            <label>Parish</label>
                                            @Html.TextBoxFor(model => model.Parish, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Parish)
                                        </div>
                                        <div class="form-group">
                                            <label>Home Diocese</label>
                                            @Html.TextBoxFor(model => model.HomeDiocese, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.HomeDiocese)
                                        </div>
                                        <div class="form-group">
                                            <label>Home Parish</label>
                                            @Html.TextBoxFor(model => model.HomeParish, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.HomeParish)
                                        </div>
                                        <div class="form-group">
                                            <label>Seminary</label>
                                            @Html.TextBoxFor(model => model.Seminary, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Seminary)
                                        </div>
                                        <div class="form-group">
                                            <label>Date Of Birth</label>
                                            @Html.TextBoxFor(model => model.DOB, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.DOB)
                                        </div>
                                        <div class="form-group">
                                            <label>Date Of Ordination</label>
                                            @Html.TextBoxFor(model => model.DateOfOrdination, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.DateOfOrdination)
                                        </div>
                                        @*<div class="form-group">
                                            <label>Marital Status</label>
                                            @Html.TextBoxFor(model => model.MaritalStatus, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.MaritalStatus)
                                        </div>*@
                                        <div class="form-group">
                                            <label>Education</label>
                                            @Html.TextBoxFor(model => model.Education, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Education)
                                        </div>
                                        <div class="form-group">
                                            <label>Feast Day</label>
                                            @Html.TextBoxFor(model => model.Field1, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Field1)
                                        </div>
                                        <div class="form-group">
                                            <label>Field2</label>
                                            @Html.TextBoxFor(model => model.Field2, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Field2)
                                        </div>
                                        <div class="form-group">
                                            <label>Field3</label>
                                            @Html.TextBoxFor(model => model.Field3, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Field3)
                                        </div>
                                        <div class="form-group">
                                            <label>Priest Type</label>
                                            @Html.DropDownListFor(model => model.Field4, PriestTypeList, "-- Select Type --", new { @class = "form-control" })
                                        </div>
                                    </div><!-- /.box-body -->
                                </div><!-- /.box -->
                            </div><!-- ./col -->
                            <div class="col-md-6">
                                <div class="box box-solid">
                                    <div class="box-header with-border">
                                        <i class="fa fa-th-large"></i>
                                        <h3 class="box-title">Additional Details</h3>
                                    </div><!-- /.box-header -->
                                    <div class="box-body">
                                        <div class="form-group">
                                            <label>Permanent Address</label>
                                            @Html.TextBoxFor(model => model.PermanentAddress, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.PermanentAddress)
                                        </div>
                                        <div class="form-group">
                                            <label>Present Address</label>
                                            @Html.TextBoxFor(model => model.PresentAddress, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.PresentAddress)
                                        </div>
                                        <div class="form-group">
                                            <label>State</label>
                                            @Html.TextBoxFor(model => model.State, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.State)
                                        </div>
                                        <div class="form-group">
                                            <label>Country</label>
                                            @Html.TextBoxFor(model => model.Country, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Country)
                                        </div>
                                        <div class="form-group">
                                            <label>PIN</label>
                                            @Html.TextBoxFor(model => model.Pin, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Pin)
                                        </div>
                                        <div class="form-group">
                                            <label>Phone</label>
                                            @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Phone)
                                        </div>
                                        <div class="form-group">
                                            <label>Mobile</label>
                                            @Html.TextBoxFor(model => model.Mobile, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Mobile)
                                        </div>
                                        <div class="form-group">
                                            <label>Email</label>
                                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Email)
                                        </div>
                                        <div class="form-group">
                                            <label>Website</label>
                                            @Html.TextBoxFor(model => model.Website, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Website)
                                        </div>
                                        <div class="form-group">
                                            <label>Other Details1</label>
                                            @Html.TextBoxFor(model => model.OtherDetails1, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.OtherDetails1)
                                        </div>
                                        <div class="form-group">
                                            <label>Other Details2</label>
                                            @Html.TextBoxFor(model => model.OtherDetails2, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.OtherDetails2)
                                        </div>
                                        <div class="form-group">
                                            <label>Field5</label>
                                            @Html.TextBoxFor(model => model.Field5, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Field5)
                                        </div>
                                    </div><!-- /.box-body -->
                                </div><!-- /.box -->
                            </div><!-- ./col -->
                        </div>
                        <p>
                            <input type="submit" value="Save" class="btn btn-primary" />
                            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section><!-- /.content -->


}
