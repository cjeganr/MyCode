@model ContentPlus.Models.DailyMessage

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("Create", "DailyMessage", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    
        <section class="content-header">
        <h1>
            Create
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Daily Message</a></li>
            <li class="active">Add Daily Mesage</li>
        </ol>
    </section>
    
    
     <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Add Daily Message</h3>
                    </div><!-- /.box-header -->
                    <!-- form start -->
                    <!--<form role="form">-->
                    <div class="box-body">
                        <div class="form-group">
                            <label>Title</label>
                            @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Title)
                            
                        </div>
                        <div class="form-group">
                            <label>Message</label>
                            @Html.TextBoxFor(model => model.Message, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Message)
                        </div>
                        <div class="form-group">
                            <label>Field1</label>
                            @Html.TextBoxFor(model => model.Field1, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Field1)
                        </div>
                        <div class="form-group">
                            <label>Field2</label>
                            @Html.TextBoxFor(model => model.Field2, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Field2)
                        </div>

                        <p>
                            <input type="submit" value="Create" class="btn btn-primary" />
                            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section><!-- /.content -->


}

<!-- jQuery 2.1.3 -->
<script src="~/styles/plugins/jQuery/jQuery-2.1.3.min.js"></script>



