@model ContentPlus.Models.Institution

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("Edit", "Institution", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)


    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Institution
            <small>Edit</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Institution</a></li>
            <li class="active">Edit Institution</li>
        </ol>
    </section>

    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Edit Institution</h3>
                    </div><!-- /.box-header -->
                    <!-- form start -->
                    <!--<form role="form">-->
                    <div class="box-body">

                        <div class="form-group">
                            <label>EparchiesId</label>
                            @Html.DropDownListFor(model => model.EparchiesId, new SelectList(ViewBag.EparchyList, "ID", "Name"), new { @class = "form-control" })


                        </div>
                        <div class="form-group">
                            <label>Region</label>
                            @Html.TextBoxFor(model => model.Region, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Region)
                        </div>
                        <div class="form-group">
                            <label>Images</label>
                            <input type="file" name="files[0]" id="Photo" />
                            @Html.ValidationMessageFor(model => model.Photo)
                        </div>
                        <div class="form-group">
                            <label>Name</label>
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                        <div class="form-group">
                            <label>Description</label>
                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Description)
                        </div>
                        <div class="form-group">
                            <label>Type</label>
                            @Html.TextAreaFor(model => model.Type, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Type)
                        </div>
                        <div class="form-group">
                            <label>Address</label>
                            @Html.TextBoxFor(model => model.Address, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Address)
                        </div>
                        <div class="form-group">
                            <label>Phone</label>
                            @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Phone)
                        </div>
                        <div class="form-group">
                            <label>Mobile</label>
                            @Html.TextBoxFor(model => model.Mobile, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Mobile)
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Email)
                        </div>
                        <div class="form-group">
                            <label>Website</label>
                            @Html.TextBoxFor(model => model.WebSite, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.WebSite)
                        </div>
                        <div class="form-group">
                            <label>Field1</label>
                            @Html.TextBoxFor(model => model.Field1, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Field1)
                        </div>
                        <div class="form-group">
                            <label>Field2</label>
                            @Html.TextBoxFor(model => model.Field2, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Field2)
                        </div>
                        <div class="form-group">
                            <label>Field3</label>
                            @Html.TextBoxFor(model => model.Field3, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Field3)
                        </div>
                        <div class="form-group">
                            <label>Field4</label>
                            @Html.TextBoxFor(model => model.Field4, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Field4)
                        </div>

                        <p>
                            <input type="submit" value="Save" class="btn btn-primary" />
                            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section><!-- /.content -->


}
<!-- jQuery 2.1.3 -->
<script src="~/styles/plugins/jQuery/jQuery-2.1.3.min.js"></script>
<script type="text/javascript">
    $(function () {
        // Replace the <textarea id="editor1"> with a CKEditor
        // instance, using default configuration.
        CKEDITOR.replace('Description');

        //bootstrap WYSIHTML5 - text editor
        //$(".textarea").wysihtml5();
    });
</script>



