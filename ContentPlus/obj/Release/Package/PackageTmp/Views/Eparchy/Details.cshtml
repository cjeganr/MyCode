@model ContentPlus.Models.Eparchy

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Details
        <small>Eparchy</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Eparchy</a></li>
        <li class="active">Eparchy Details</li>
    </ol>
</section>

   <!-- Main content -->
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Eparchy Details</h3>
                </div><!-- /.box-header -->
                <!-- form start -->
                <!--<form role="form">-->
                <div class="box-body">
                    <div class="form-group">
                        <label>Province Id</label>
                        @Html.DropDownListFor(model => model.ProvinceId, new SelectList(ViewBag.ProvinceList, "ID", "Name"), new { @class = "form-control" })

                    </div>
                    <div class="form-group">
                        <label>Eparchies Name</label>
                        @Html.DisplayFor(model => model.EparchiesName)
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        @Html.Raw(HttpUtility.HtmlDecode(Model.Description));
                    </div>
                    <div class="form-group">
                        <label>Address</label>
                        @Html.DisplayFor(model => model.Address)
                    </div>
                    <div class="form-group">
                        <label>Phone</label>
                        @Html.DisplayFor(model => model.Phone)
                    </div>
                    <div class="form-group">
                        <label>Mobile</label>
                        @Html.DisplayFor(model => model.Mobile)
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        @Html.DisplayFor(model => model.Email)
                    </div>
                    <div class="form-group">
                        <label>Website</label>
                        @Html.DisplayFor(model => model.WebSite)
                    </div>
                    <div class="form-group">
                        <label>Field1</label>
                        @Html.DisplayFor(model => model.Field1)
                    </div>
                    <div class="form-group">
                        <label>Field2</label>
                        @Html.DisplayFor(model => model.Field2)
                    </div>
                    <div class="form-group">
                        <label>Field3</label>
                        @Html.DisplayFor(model => model.Field3)
                    </div>
                    <div class="form-group">
                        <label>Field4</label>
                        @Html.DisplayFor(model => model.Field4)
                    </div>
                    <p>
                        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
                    </p>
                </div>
            </div>
        </div>
    </div>
</section><!-- /.content -->
<!-- jQuery 2.1.3 -->
<script src="~/styles/plugins/jQuery/jQuery-2.1.3.min.js"></script>