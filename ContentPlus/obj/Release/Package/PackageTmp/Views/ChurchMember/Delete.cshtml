@model ContentPlus.Models.ChurchMember

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <section class="content-header">
        <h1>
            Church
            <small>Church Member</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Church</a></li>
            <li class="active">Church Member Details</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Church Member Details</h3>
                    </div><!-- /.box-header -->
                    <!-- form start -->
                    <!--<form role="form">-->
                    <div class="box-body">
                        <div class="form-group">
                            <label>Church</label>
                            @Html.DropDownListFor(model => model.ChurchId, new SelectList(ViewBag.ChurchList, "ID", "Name"), new { @class = "form-control" })

                        </div>
                        <div class="form-group">
                            <label>Priest</label>
                            @Html.DropDownListFor(model => model.PriestId, new SelectList(ViewBag.PriestList, "ID", "Name"), new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Position Held</label>
                            @Html.TextBoxFor(model => model.PositionHeld, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.PositionHeld)
                        </div>
                        <div class="form-group">
                            <label>Status</label>
                            @Html.TextBoxFor(model => model.Status, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Status)
                        </div>

                        <div class="box-header">
                            <h3 class="box-title">Are you sure you want to delete this?</h3>
                        </div><!-- /.box-header -->
                        <p>
                            <input type="submit" value="Delete" class="btn btn-primary" />
                            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
                        </p>

                    </div>
                </div>
            </div>
        </div>
    </section><!-- /.content -->
}
<!-- jQuery 2.1.3 -->
<script src="~/styles/plugins/jQuery/jQuery-2.1.3.min.js"></script>

