@model IEnumerable<ContentPlus.Models.Priest>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutInner.cshtml";
}


    <div class="row">
        <div class="col-md-8 col-xs-8 col-xxs">
            <h1 class="h1">Priest Directory</h1>
            </div>
        </div>
<div class="row">
    <div class="col-md-8 col-xs-8 col-xxs">
        <h4 class="h4">Priest Search</h4>
    </div>
</div>

@using (Html.BeginForm("Index", "PriestSearch", FormMethod.Get))
{
    <div>
        <div class="row">
            <div class="col-md-6">
                <div class="box-body">
                    <div class="form-group">
                        <input type="text" name="name" placeholder="Search by Priest Name..." class="form-control" required>
                    </div>
                </div>

            </div>
        </div>
        <input type="submit" value="Search" id="btnSubmit" class="btn btn-primary" />
    </div>
}
    
<br />
@if(Model != null)
            {
    foreach (var item in Model)
    {
    <div style="padding-bottom:20px; border-bottom:dashed 1px #CCC; margin-bottom:30px;">
        <div class="row">
            <div class="col-xs-4 col-xxs">
                <img src="@Url.Content(item.Photo)" height="360" class="img-responsive img-thumbnail">
            </div>
            <div class="col-xs-8 col-xxs">
                <h3 class="h4">@Html.DisplayFor(modelItem => item.Name)</h3>
                <p><strong>Eparchy :</strong> @Html.DisplayFor(modelItem => item.Diocese)</p>
                <p><strong>Parish :</strong> @Html.DisplayFor(modelItem => item.Parish)</p>
                <p><strong>Date Of Birth :</strong> @Html.DisplayFor(modelItem => item.DOB)</p>
                @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-sm btn-primary" })
                @*<a class="btn btn-sm btn-primary" href="#">More Details</a>*@
            </div>
        </div>
    </div>
    }


            }

            

