                                        <label>Home Parish</label>
                                        @Html.DisplayFor(model => model.HomeParish)
                                    </div>
                                    <div class="form-group">
                                        <label>Seminary</label>
                                        @Html.DisplayFor(model => model.Seminary)
                                    </div>
                                    <div class="form-group">
                                        <label>Date Of Birth</label>
                                        @Html.DisplayFor(model => model.DOB)
                                    </div>
                                    <div class="form-group">
                                        <label>Date Of Ordination</label>
                                        @Html.DisplayFor(model => model.DateOfOrdination)
                                    </div>
                                    @*<div class="form-group">
                                        <label>Marital Status</label>
                                        @Html.DisplayFor(model => model.MaritalStatus)
                                    </div>*@
