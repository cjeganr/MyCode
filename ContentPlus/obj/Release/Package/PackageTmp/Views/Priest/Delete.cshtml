                                    </div>
                                    <div class="form-group">
                                        <label>Parish</label>
                                        @Html.DisplayFor(model => model.Parish)
                                    </div>
                                    <div class="form-group">
                                        <label>Home Diocese</label>
                                        @Html.DisplayFor(model => model.HomeDiocese)
