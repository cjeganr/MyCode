                                        @Html.DisplayFor(model => model.Mobile)
                                    </div>
                                    <div class="form-group">
                                        <label>Email</label>
                                        @Html.DisplayFor(model => model.Email)
                                    </div>
                                    <div class="form-group">
                                        <label>Website</label>
                                        @Html.DisplayFor(model => model.Website)
                                    </div>
                                    <div class="form-group">
                                        <label>Other Details1</label>
                                        @Html.DisplayFor(model => model.OtherDetails1)
                                    </div>
                                    <div class="form-group">
                                        <label>Other Details2</label>
                                        @Html.DisplayFor(model => model.OtherDetails2)
                                    </div>
                                    <div class="form-group">
                                        <label>Field5</label>
                                        @Html.DisplayFor(model => model.Field5)
                                    </div>
                                </div><!-- /.box-body -->
                            </div><!-- /.box -->
