@model ContentPlus.Models.Article

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@{
    List<SelectListItem> CategorylistItems = new List<SelectListItem>();
    CategorylistItems.Add(new SelectListItem
         {
             Text = "Articles",
             Value = "Articles",
             Selected = true
         });
    CategorylistItems.Add(new SelectListItem
         {
             Text = "News",
             Value = "News"

         });
    CategorylistItems.Add(new SelectListItem
         {
             Text = "Events",
             Value = "Events"
         });
    List<SelectListItem> SubCategorylistItems = new List<SelectListItem>();
    SubCategorylistItems.Add(new SelectListItem
    {
        Text = "None",
        Value = "None",
        Selected = true
    });
    SubCategorylistItems.Add(new SelectListItem
         {
             Text = "Church",
             Value = "Church"
         });
    SubCategorylistItems.Add(new SelectListItem
    {
        Text = "Priest",
        Value = "Priest"
    });
    SubCategorylistItems.Add(new SelectListItem
         {
             Text = "Publications",
             Value = "Publications"
         });
    List<SelectListItem> SectionlistItems = new List<SelectListItem>();
    SectionlistItems.Add(new SelectListItem
    {
        Text = "None",
        Value = "None",
        Selected = true
    });
    SectionlistItems.Add(new SelectListItem
         {
             Text = "HomePage",
             Value = "HomePage"
         });
    
    SectionlistItems.Add(new SelectListItem
         {
             Text = "InnerPage",
             Value = "InnerPage"
         });
    SectionlistItems.Add(new SelectListItem
    {
        Text = "Blocks",
        Value = "Blocks"
    });
}
@using (Html.BeginForm("Create", "Articles", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Articles
        <small>New Article</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Articles</a></li>
        <li class="active">New Article</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Add Article</h3>
                </div><!-- /.box-header -->
                <!-- form start -->
                <!--<form role="form">-->
                    <div class="box-body">
                                <div class="form-group">
                                <label>Title</label>
                                @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Title)
                                 </div>
                        <div class='row'>
                            <div class='col-md-12'>
                                <div class='box box-info'>
                                    <div class='box-header'>
                                        <h3 class='box-title'>Content</h3>
                                        <!-- tools box -->
                                        <div class="pull-right box-tools">
                                            <button class="btn btn-info btn-sm" data-widget='collapse' data-toggle="tooltip" title="Collapse"><i class="fa fa-minus"></i></button>
                                            <button class="btn btn-info btn-sm" data-widget='remove' data-toggle="tooltip" title="Remove"><i class="fa fa-times"></i></button>
                                        </div><!-- /. tools -->
                                    </div><!-- /.box-header -->
                                    <div class='box-body pad'>
                                        @Html.TextAreaFor(model => model.Content, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Content)
                                    </div>
                                </div><!-- /.box -->
                            </div><!-- /.col-->
                        </div>        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="box box-solid">
                                    <div class="box-header with-border">
                                        <i class="fa fa-file-image-o"></i>
                                        <h3 class="box-title">Images</h3>
                                    </div><!-- /.box-header -->
                                    <div class="box-body">
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <b>Image1&nbsp; :</b>
                                                </div>
                                                <div class="col-md-4">
                                                    <input type="file" name="files[0]" id="Photo1" />
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <b>Image2&nbsp; :</b>
                                                </div>
                                                <div class="col-md-4">
                                                    <input type="file" name="files[1]" id="Photo2" />
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <b>Image3&nbsp; :</b>
                                                </div>
                                                <div class="col-md-4">
                                                    <input type="file" name="files[2]" id="Photo3" />
                                                </div>
                                            </div>
                                        </div>
                                    </div><!-- /.box-body -->
                                </div><!-- /.box -->
                            </div><!-- ./col -->
                            <div class="col-md-6">
                                <div class="box box-solid">
                                    <div class="box-header with-border">
                                        <i class="fa fa-file-pdf-o"></i>
                                        <h3 class="box-title">PDF's</h3>
                                    </div><!-- /.box-header -->
                                    <div class="box-body">
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <b>PDF1&nbsp; :</b>
                                                </div>
                                                <div class="col-md-4">
                                                    <input type="file" name="files[3]" id="PDF1" />
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <b>PDF2&nbsp; :</b>
                                                </div>
                                                <div class="col-md-4">
                                                    <input type="file" name="files[4]" id="PDF2" />
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <b>PDF3&nbsp; :</b>
                                                </div>
                                                <div class="col-md-4">
                                                    <input type="file" name="files[5]" id="PDF3" />
                                                </div>
                                            </div>
                                        </div>
                                    </div><!-- /.box-body -->
                                </div><!-- /.box -->
                            </div><!-- ./col -->
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="box box-solid">
                                    <div class="box-header with-border">
                                        <i class="fa fa-list-alt"></i>
                                        <h3 class="box-title">Categories</h3>
                                    </div><!-- /.box-header -->
                                    <div class="box-body">
                                        <div class="form-group">
                                            <label>Category</label>
                                            @Html.DropDownListFor(model => model.Category1, CategorylistItems, "-- Select Category --", new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Category1)
                                        </div>
                                        <div class="form-group">
                                            <label>Sub Category</label>
                                            @Html.DropDownListFor(model => model.Category2, SubCategorylistItems, "-- Select Sub Category --", new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Category2)
                                        </div>
                                        <div class="form-group">
                                            <label>Section</label>
                                            @Html.DropDownListFor(model => model.Section, SectionlistItems, "-- Select Section --", new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Section)
                                        </div> 
                                    </div><!-- /.box-body -->
                                </div><!-- /.box -->
                            </div><!-- ./col -->
                            <div class="col-md-6">
                                <div class="box box-solid">
                                    <div class="box-header with-border">
                                        <i class="fa fa-check-square-o"></i>
                                        <h3 class="box-title">Article Status</h3>
                                    </div><!-- /.box-header -->
                                    <div class="box-body">
                                        <div class="form-group">
                                            <label>Is Active</label>
                                            @Html.EditorFor(model => model.IsActive)
                                            @Html.ValidationMessageFor(model => model.IsActive)
                                        </div>
                                        <div class="form-group">
                                            <label>Is Special</label>
                                            @Html.EditorFor(model => model.IsSpecial)
                                            @Html.ValidationMessageFor(model => model.IsSpecial)
                                        </div>
                                        <div class="form-group">
                                            <label>Author</label>
                                            @Html.TextBoxFor(model => model.Author, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Author)
                                        </div>
                                        </div><!-- /.box-body -->
                                </div><!-- /.box -->
                            </div><!-- ./col -->
                        </div>


                        <div class="row">
                            <div class="col-md-6">
                                <div class="box box-solid">
                                    <div class="box-header with-border">
                                        <i class="fa fa-th-large"></i>
                                        <h3 class="box-title">Additional Details</h3>
                                    </div><!-- /.box-header -->
                                    <div class="box-body">
                                        <div class="form-group">
                                            <label>Detail_A</label>
                                            @Html.TextBoxFor(model => model.Custom1, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Custom1)
                                        </div>
                                        <div class="form-group">
                                            <label>Detail_B</label>
                                            @Html.TextBoxFor(model => model.Custom2, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Custom2)
                                        </div>
                                        <div class="form-group">
                                            <label>Detail_C</label>
                                            @Html.TextBoxFor(model => model.Custom3, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Custom3)
                                        </div>
                                    </div><!-- /.box-body -->
                                </div><!-- /.box -->
                            </div><!-- ./col -->
                            <div class="col-md-6">
                                <div class="box box-solid">
                                    <div class="box-header with-border">
                                        <i class="fa fa-th-large"></i>
                                        <h3 class="box-title">Additional Details</h3>
                                    </div><!-- /.box-header -->
                                    <div class="box-body">
                                        <div class="form-group">
                                            <label>Detail_D</label>
                                            @Html.TextBoxFor(model => model.Custom4, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Custom4)
                                        </div>
                                        <div class="form-group">
                                            <label>Detail_E</label>
                                            @Html.TextBoxFor(model => model.Custom5, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Custom5)
                                        </div>
                                        <div class="form-group">
                                            <label>Detail_F</label>
                                            @Html.TextBoxFor(model => model.Custom6, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Custom6)
                                        </div>
                                    </div><!-- /.box-body -->
                                </div><!-- /.box -->
                            </div><!-- ./col -->
                        </div>
                            <p>
                                <input type="submit" value="Create" class="btn btn-primary" />
                                @Html.ActionLink("Back to List", "Show", null, new { @class = "btn btn-primary" })
                            </p>
                        </div>
            </div>
            </div>
        </div>
</section><!-- /.content -->
    
    }
